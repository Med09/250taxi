    <name>250 Taxi</name>

    <description>
		Taxi Booking Service
    </description>

    <author href="https://www.250taxi.com" email="info@250taxi.com">
        Jens Br√∂cher / Afshon Group
    </author>
	
	<icon src="icon.png" />
		
	<!-- iPhone 6 / 6+ -->
<icon src="icon-60@3x.png" platform="ios" width="180" height="180" />

<!-- iPhone / iPod Touch  -->
<icon src="icon-60.png" platform="ios" width="60" height="60" />
