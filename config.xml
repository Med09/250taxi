<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.twofiftytaxi.app"
        versionCode = "11" 
        version     = "1.8.2" >

    <name>250 Taxi</name>

    <description>
		Kigali's Taxi Booking Service
    </description>

    <author href="https://www.250taxi.com" email="info@250taxi.com">
        Jens Br√∂cher / Afshon Group
    </author>
        
    <preference name="windows-target-version" value="10.0" />
    <preference name="windows-phone-target-version" value="10.0" />
        
    <splash src="icon.png" platform="winphone" />
	
	<icon src="icon.png" />
		
	<!-- Core plugins -->
    <gap:plugin name="cordova-plugin-device" source="npm" />
    <gap:plugin name="cordova-plugin-device-orientation" source="npm" />
    <gap:plugin name="cordova-plugin-dialogs" source="npm" />
    <gap:plugin name="cordova-plugin-file" source="npm" />
    <gap:plugin name="cordova-plugin-file-transfer" source="npm" />
    <gap:plugin name="cordova-plugin-geolocation" source="npm" />
    <gap:plugin name="cordova-plugin-inappbrowser" source="npm" />
    <gap:plugin name="cordova-plugin-media" source="npm" />
    <gap:plugin name="cordova-plugin-whitelist" source="npm" />
        
    <gap:plugin name="cordova-plugin-local-notifications-pgb" source="npm" />

    <gap:plugin name="cordova-plugin-screen-orientation" source="npm" />
        
    <gap:plugin name="cordova-plugin-fastrde-checkgps" source="npm" />
		
	<gap:plugin name="mobi.moica.whatsapp" spec="0.0.1" source="pgb" /> 
        
    <gap:plugin name="cordova-plugin-barcodescanner" source="npm" />
        
    <plugin name="com.simplec.plugins.videosettings" spec="0.1.4" source="pgb" />
        
    <gap:plugin name="onesignal-cordova-plugin-pgb-compat" source="npm" />
    <gap:plugin name="cordova-plugin-googleplayservices" source="npm" />
    <gap:plugin name="cordova-plugin-android-support-v4" source="npm" />
        
    <allow-navigation href="*" />
    <allow-intent href="*" />
    <access origin="*" />

</widget>